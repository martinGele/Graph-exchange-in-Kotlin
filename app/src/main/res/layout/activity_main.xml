<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.anychart.AnyChartView

            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/graph_height">
        <ProgressBar
                android:layout_gravity="center"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_width_height"
                android:layout_height="@dimen/progress_width_height"
                android:id="@+id/progressBar"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/search_values"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/enter_search_values_bellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.anychart.AnyChartView>
    <TextView
            android:id="@+id/titleText"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_margin="@dimen/margin_15dp"
            android:gravity="center"
            android:text="@string/exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:padding="@dimen/padding_10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80dp">
        <Button

                android:layout_weight="1"
                android:text="@string/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromButton"/>
        <View android:layout_width="@dimen/margin_15dp"
              android:layout_height="wrap_content"/>
        <Button
                android:layout_weight="1"
                android:text="@string/to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toButton"/>


    </LinearLayout>

    <Button
            android:layout_margin="@dimen/padding_15dp"

            android:text="@string/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_button"/>


</LinearLayout>